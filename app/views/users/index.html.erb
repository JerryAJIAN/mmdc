<div class="page-header">
  <h1>ユーザー情報</h1>
</div>

<%= search_form_for @q , html: { class: "form-horizontal", role: "form"} do |f|  %>

<div class="panel panel-default">
    <div class="panel-heading">
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
        <span>検索条件</span>
    </div>
    <div class="panel-body">
        <div class="form-group">
            <%= f.label :id_eq, 'ID', class: "col-sm-2 control-label" %>
            <div class="col-sm-2">
              <%= f.text_field :id_eq, class: "form-control" %>
            </div>

            <%= f.label :screen_name_cont, "ツイッター", class: "col-sm-2 control-label" %>
            <div class="col-sm-3">
              <%= f.text_field :screen_name_cont, class: "form-control" %>
            </div>

            <div class="col-sm-2">
               <div class="checkbox">
                  <label>
                      <%= f.check_box :is_ban_eq,{class: "form-control"} ,checked_value = "true", unchecked_value = "" %> BAN
                  </label>
               </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-4 col-sm-offset-2"><%= f.submit '検索' ,class: "btn btn-primary" %> <a href="#"  class="btn btn-default" onclick="clearFormAll();return false">リセット</a></div>
        </div>
    </div>
</div>
<% end %>

<div class="table-responsive">
  <div class="text-right"><% unless @users.total_count == 0 %><%= @users.offset_value + 1 %>〜<%= @users.offset_value + @users.length %>件 / <% end %><%= @users.total_count %>件</div>
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= sort_link(@q, :id) %></th>
        <th><%= sort_link(@q, :screen_name, 'ツイッター') %></th>
        <th><%= sort_link(@q, :name, '名前') %></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @users) do |user| %>
        <td><%= user.id %></td>
        <td><% if user.is_ban %><p class="label label-danger">BAN</p> <% end %><%= link_to  user.screen_name, "https://twitter.com/#{user.screen_name}", target: "_blank" %></td>
        <td><%= link_to user.name, edit_user_path(user) %></td>
        <td><%= link_to 'BAN', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
  <%= paginate(@users) %>
</div>
