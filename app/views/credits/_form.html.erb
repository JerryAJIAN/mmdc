<%= form_for(@credit, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @credit.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">閉じる</span></button>
      <h4>入力エラーがあります:</h4>

      <ul>
      <% @credit.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :wanted_id, :value => @wanted.id %>
  <div class="form-group">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
      <div class="panel panel-primary">
        <div class="panel-heading">
            モデル情報
        </div>
        <div class="panel-body">
            <div class="col-sm-2"><strong>フォルダ名</strong></div>
            <div class="col-sm-10"><%= @wanted.folder_name %></div>
            <div class="col-sm-2"><strong>ファイル名</strong></div>
            <div class="col-sm-10"><%= @wanted.file_name %></div>
        </div>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label '名前', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", :maxlength => 100, :placeholder => "モデルやアクセサリ、エフェクト名" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :author_names, class: "col-sm-2 control-label" %>
    <div class="col-sm-10" id="append_area">
        <% @credit.author_names.each_with_index{ | val, idx |  %>
            <%= autocomplete_field_tag "author_names[]",
                @credit.author_names[idx],
                autocomplete_author_name_credits_path,
                :class => 'form-control',
                :placeholder => '作者名' %>
        <% } %>
        <a href="#" id="append" onclick="return false" class="small">行追加</a>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :distribution, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= raw get_thumb(@credit.distribution) %>
      <%= f.text_field :distribution, class: "form-control", :maxlength => 20, :placeholder => "im sm td nmで始まるもの" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :url, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :url, class: "form-control", :maxlength => 200, :placeholder => "ニコニコ以外の配布先があれば" %>
    </div>
  </div>
<% unless  @credit.updated_at.nil? then %>
  <div class="form-group">
    <%= f.label :updated_screen_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <div id=":updated_screen_name"><a href="https://twitter.com/<%= @credit.updated_screen_name %>"><img src="http://furyu.nazo.cc/twicon/<%= @credit.updated_screen_name %>" class="image" /></a></div>
      <span class="small"><%= @credit.updated_at.strftime('%Y年%m月%d日 %H:%M:%S') %></span>
    </div>
  </div>
<% end %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<script>
$(function () {
    /* テキストフィールド追加 */
    $('#append').click(function () {
        $('#append_area').append('<%= autocomplete_field_tag "author_names[]",'',autocomplete_author_name_credits_path, :class => 'form-control', :placeholder => '作者名' %>');
    });
});
</script>
