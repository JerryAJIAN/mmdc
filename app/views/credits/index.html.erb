<div class="page-header">
  <h1>クレジット情報 <small>作者情報が提供済のデータ</small></h1>
</div>
<%= search_form_for @q , html: { class: "form-horizontal", role: "form"} do |f|  %>

<div class="panel panel-default">
    <div class="panel-heading">
        <span class="glyphicon glyphicon-search" aria-hidden="true">
        <span>検索条件</span>
    </div>
    <div class="panel-body">
        <div class="form-group">
            <%= f.label :name_cont, '名前', class: "col-sm-2 control-label" %>
            <div class="col-sm-3">
              <%= f.text_field :name_cont, class: "form-control" %>
            </div>
            <%= f.label :authors_name_cont, "作者名", class: "col-sm-2 control-label" %>
            <div class="col-sm-3">
              <%= f.text_field :authors_name_cont, class: "form-control" %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :wanted_folder_name_cont, "フォルダ名", class: "col-sm-2 control-label" %>
            <div class="col-sm-3">
              <%= f.text_field :wanted_folder_name_cont, class: "form-control" %>
            </div>
            <%= f.label :wanted_file_name_cont, 'ファイル名', class: "col-sm-2 control-label" %>
            <div class="col-sm-3">
              <%= f.text_field :wanted_file_name_cont, class: "form-control" %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-4 col-sm-offset-2"><%= f.submit '検索' ,class: "btn btn-primary" %> <a href="#"  class="btn btn-default" onclick="clearFormAll();return false">リセット</a></div>
        </div>
    </div>
</div>
<% end %>

<div class="table-responsive">
  <div class="text-right"><% unless @credits.total_count == 0 %><%= @credits.offset_value + 1 %>〜<%= @credits.offset_value + @credits.length %>件 / <% end %><%= @credits.total_count %>件</div>
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th><%= sort_link(@q, :name) %></th>
            <th>作者名</th>
            <th>配布先</th>
            <th><%= sort_link(@q, :wanted_folder_name, 'フォルダ名') %></th>
            <th><%= sort_link(@q, :wanted_file_name, 'ファイル名') %></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @credits) do |credit| %>
            <td><%= link_to credit.name.truncate(15), edit_credit_path(credit) %></td>
            <td><% credit.authors.each do | author | %> <%=author.name.truncate(15) %><br> <% end %></td>
            <td><%= link_to_unless(credit.distribution_url.blank?, credit.distribution, credit.distribution_url) %></td>
            <td><%= credit.wanted.folder_name.truncate(10) %></td>
            <td><%= credit.wanted.file_name.truncate(10) %></td>
      <% end %>
    </tbody>
  </table>
  <%= paginate(@credits) %>
</div>
