<div class="page-header">
  <h1>クレジット情報 <small>作者情報が提供済のデータ</small></h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>名前</th>
            <th>作者</th>
            <th>フォルダ名</th>
            <th>ファイル名</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @credits) do |credit| %>
            <td><%= link_to credit.name, edit_credit_path(credit) %></td>
            <td><%= credit.author.name %></td>
            <td><%= credit.wanted.folder_name %></td>
            <td><%= credit.wanted.file_name %></td>
      <% end %>
    </tbody>
  </table>
</div>
