<div class="page-header">
  <%= link_to authors_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_author_path(@author), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show author</h1>
</div>

<dl class="dl-horizontal">
  <dt>Credit:</dt>
  <dd><%= @author.credit %></dd>

  <dt>Name:</dt>
  <dd><%= @author.name %></dd>

  <dt>Url:</dt>
  <dd><%= @author.url %></dd>

  <dt>Twitter:</dt>
  <dd><%= @author.twitter %></dd>

  <dt>Pixiv:</dt>
  <dd><%= @author.pixiv %></dd>

  <dt>Email:</dt>
  <dd><%= @author.email %></dd>

  <dt>Lock version:</dt>
  <dd><%= @author.lock_version %></dd>

</dl>
