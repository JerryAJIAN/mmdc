<%= form_for(@author, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @author.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">閉じる</span></button>
      <h4>入力エラーがあります:</h4>

      <ul>
      <% @author.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label '名前', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", :maxlength => 100, :placeholder => "作者名" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :url, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :url, class: "form-control", :maxlength => 250, :placeholder => "作者のサイトがある場合入力してください" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :nico, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :nico, class: "form-control", :maxlength => 50, :placeholder => "数字IDのみで入力してください" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :twitter, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :twitter, class: "form-control" , :maxlength => 30, :placeholder => "@なしで入力してください" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :pixiv, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :pixiv, class: "form-control" , :maxlength => 30, :placeholder => "数字IDのみで入力してください" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :email, class: "form-control" , :maxlength => 200, :placeholder => "公開して良いメールアドレスを入力してください" %>
    </div>
  </div>
<% unless  @author.updated_at.nil? then %>
  <div class="form-group">
    <%= f.label :update_by, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <div id=":update_by"><a href="https://twitter.com/<%= @author.update_by %>"><img src="http://furyu.nazo.cc/twicon/<%= @author.update_by %>" class="image" /></a></div>
      <span class="small"><%= @author.updated_at.strftime('%Y年%m月%d日 %H:%M:%S') %></span>
    </div>
  </div>
<% end %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
