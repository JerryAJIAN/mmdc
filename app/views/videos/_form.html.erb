<%= form_for(@video, html: { class: "form-horizontal", role: "form" ,:multipart => true, :enctype => "multipart/form-data"}) do |f| %>
  <% if @video.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">閉じる</span></button>
      <h4>入力エラーがあります:</h4>

      <ul>
      <% @video.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" , :placeholder => "動画名など、自分用なので自由に入力してください" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :file, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= file_field_tag :file, :name => "file[]", id:"upload_file", multiple:"true" %>
      <small>ファイル選択画面でCtrl+クリックすると複数選択できます。emm/mpj対応。</small>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<script>
$('#upload_file').fileinput({
	language : 'ja',
	hideThumbnailContent : true,
	allowedFileExtensions : ['emm', 'xml', 'mpj'],
	removeFromPreviewOnError : true,
	showUpload : false,
	fileActionSettings : {
		showZoom : false,
	}
});
</script>
