<div class="page-header">
  <%= link_to infos_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_info_path(@info), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show info</h1>
</div>

<dl class="dl-horizontal">
  <dt>Date:</dt>
  <dd><%= @info.date %></dd>

  <dt>Title:</dt>
  <dd><%= @info.title %></dd>

  <dt>Note:</dt>
  <dd><%= @info.note %></dd>

  <dt>Lock version:</dt>
  <dd><%= @info.lock_version %></dd>

</dl>
