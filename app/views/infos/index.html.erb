<div class="page-header">
  <%= link_to new_info_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Info
  <% end %>
  <h1>Listing infos</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Date</th>
            <th>Title</th>
            <th>Note</th>
            <th>Lock version</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @infos) do |info| %>
            <td><%= info.date %></td>
            <td><%= info.title %></td>
            <td><%= info.note %></td>
            <td><%= info.lock_version %></td>
            <td><%= link_to 'Show', info %></td>
        <td><%= link_to 'Edit', edit_info_path(info) %></td>
        <td><%= link_to 'Destroy', info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
